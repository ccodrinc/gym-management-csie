// Prisma schema for Auth.js + RBAC
// https://authjs.dev/reference/adapter/prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  MEMBER
  ADMIN
}

enum MembershipType {
  Monthly
  Annual
  Day_Pass
}

model User {
  id             String         @id @default(cuid())
  name           String?
  username       String         @unique
  image          String?
  password       String?
  role           Role           @default(MEMBER)
  phone          String?
  membershipType MembershipType?
  startDate      String?
  expiryDate     String?
  gymVisits      Int            @default(0)
  accounts       Account[]
  sessions       Session[]
  visits         Visit[]
  classBookings  ClassBooking[]

  @@map("users")
}

model Visit {
  id     String @id @default(cuid())
  userId String @map("user_id")
  date   String
  time   String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("visits")
}

model GymClass {
  id       String   @id @default(cuid())
  name     String
  day      String
  time     String
  spots    Int
  maxSpots Int
  bookings ClassBooking[]

  @@map("gym_classes")
}

model ClassBooking {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  gymClassId String   @map("gym_class_id")
  date      String
  time      String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  gymClass  GymClass  @relation(fields: [gymClassId], references: [id], onDelete: Cascade)

  @@map("class_bookings")
}

model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

